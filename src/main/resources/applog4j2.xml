<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn"  name="MyApp" packages="">
    <!-- see this ::::  https://logging.apache.org/log4j/2.x/manual/configuration.html-->
    <Properties>
        <Property name="LOG_PATTERN">%-5p %c - %m%n</Property>
        <Property name="LOG_CONSOLE">%-5p %c{4} - %m%n</Property>
    </Properties>
    <Appenders>
        <!--RollingFile позволяет нам настаивать файл лога -->
        <RollingFile name="FileAppender"
                     fileName="${sys:app.directory.logs}/ticketGenerator.log"
                     filePattern="${sys:app.directory.logs}/ticketGenerator-%d{yyyy-MM-dd}-%i.log"> <!--pattern нужен если у один файл уже не поместилось создеается еще один файл-часть куда будет уже записывая-->
            <PatternLayout>
                <Pattern>${LOG_PATTERN}</Pattern>
            </PatternLayout>

            <!-- Политика ротации файлов -->
            <Policies>
                <!-- Ротация файла при достижении 5 MB -->
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>

            <!-- Настройка количества лог-файлов -->
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
        <!-- // Это старый
        <File name="FileAppender"
              fileName="${sys:app.directory.logs}/ticketGenerator-${date:yyyy-MM-dd-HHmmssSSS}.log"
              append="false"> &lt;!&ndash;don't add at the end in exist file&ndash;&gt;
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </File>-->

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_CONSOLE}"/> <!--задаю значение через property -->
        </Console>
    </Appenders>
    <Loggers>
        <!--Для иных библиотек я вывожу только WARN-->
        <Root level="warn">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="Console"/>
        </Root>

        <!--Таким вот обрзом я настаиваю все логеры которые находятся в данной папке и подпапках-->
        <Logger name="bntu.fitr.gorbachev.ticketsgenerator.main" level="info"
                additivity="false">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!--Таким вот обрзом я настаиваю все логеры которые находятся в данной папке и подпапках-->
        <Logger name="bntu.fitr.gorbachev.ticketsgenerator.main.basis" level="debug"
                additivity="false">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="Console"/>
        </Logger>
        <!--Таким вот обрзом я настаиваю все логеры которые находятся в данной папке и подпапках-->
        <Logger name="bntu.fitr.gorbachev.ticketsgenerator.main.services" level="info"
                additivity="false">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="Console"/>
        </Logger>
        <!--Таким вот обрзом я настаиваю все логеры которые находятся в данной папке и подпапках-->
        <Logger name="bntu.fitr.gorbachev.ticketsgenerator.main.views" level="info"
                additivity="false">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>